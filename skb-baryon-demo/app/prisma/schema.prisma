generator client {
  provider = "prisma-client-js"
  // Rely on the default engine for the target platform (native). Explicit binaryTargets and custom output
  // paths make Docker builds brittle across environments. Leaving defaults ensures Prisma generates
  // the client into `node_modules/@prisma/client` during install.
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
